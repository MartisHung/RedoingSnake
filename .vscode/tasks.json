{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Snake Game",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "Snake/Snake.cpp",
                "Map/Map.cpp",
                "-o",
                "Snake.Game.g++.exe",
                "-O2",
                "-lUser32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Snake Game",
            "type": "shell",
            "command": "${workspaceFolder}/Snake.Game.g++.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build Snake Game"
        }
    ]
}